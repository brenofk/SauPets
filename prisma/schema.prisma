generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ========================
// Enums
// ========================

enum Sexo {
  M
  F
}

enum DocumentoTipo {
  carteira_vacinacao
  exame
  receita
  outro
}

enum TipoAnimal {
  Cachorro
  Gato
  Passaro
  Outro
}

// ========================
// Models
// ========================

model Usuario {
  id            Int       @id @default(autoincrement())
  nome          String
  cpf           String    @unique
  email         String    @unique
  senha         String
  telefone      String?
  foto_perfil   String?   // novo campo
  data_cadastro DateTime  @default(now())

  pets          Pet[]       @relation("UsuarioPets")
  lembretes     Lembrete[]  @relation("UsuarioLembretes")
}


model Pet {
  id            Int       @id @default(autoincrement())
  usuario_id    Int
  nome          String
  tipo          TipoAnimal
  sexo          Sexo?
  peso          Decimal?
  foto_url      String?

  usuario       Usuario   @relation("UsuarioPets", fields: [usuario_id], references: [id], onDelete: Cascade)
  vacinas       Vacina[]  @relation("PetVacinas")
  documentos    Documento[] @relation("PetDocumentos")
  lembretes     Lembrete[] @relation("PetLembretes")

  @@index([usuario_id])
}

model Vacina {
  id            Int       @id @default(autoincrement())
  pet_id        Int
  nome_vacina   String
  data_aplicacao DateTime?
  data_reforco  DateTime?
  veterinario   String?

  pet           Pet       @relation("PetVacinas", fields: [pet_id], references: [id], onDelete: Cascade)
}

model Documento {
  id            Int       @id @default(autoincrement())
  pet_id        Int
  titulo        String
  tipo          DocumentoTipo
  arquivo_url   String
  data_upload   DateTime @default(now())

  pet           Pet       @relation("PetDocumentos", fields: [pet_id], references: [id], onDelete: Cascade)
}

model Lembrete {
  id            Int       @id @default(autoincrement())
  usuario_id    Int
  pet_id        Int?
  titulo        String
  descricao     String?
  data_evento   DateTime
  notificado    Boolean   @default(false)

  usuario       Usuario   @relation("UsuarioLembretes", fields: [usuario_id], references: [id], onDelete: Cascade)
  pet           Pet?      @relation("PetLembretes", fields: [pet_id], references: [id], onDelete: Cascade)

  @@index([usuario_id, pet_id])
}
